<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/rootLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ForgotPasswordActivity">


<!-- White Curved Container -->


<LinearLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-thin"
        android:text="Forgot"
        android:textColor="#ffff"
        android:textSize="45sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Password?"
        android:textColor="#ffff"
        android:textSize="45sp" />


</LinearLayout>

<!-- White Curved Container (Card-like look) -->
<LinearLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="280dp"
    android:orientation="vertical"
    android:background="@drawable/white_curved_top"
    android:padding="24dp"
    >




    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Enter your E-Mail address below and we’ll\nsend you a secure link to reset your\naccount’s password."
            android:textColor="#000000"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

        <!-- Phone Field -->
        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/email"
                android:tint="#17BAD3" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="domain@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12dp"
                android:textColorHint="#999" />

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/img14"
                android:tint="#999" />
        </LinearLayout>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:backgroundTint="#17BAD3"
            android:text="SEND"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- Sign Up Option -->


    </LinearLayout>
</LinearLayout>

</RelativeLayout>
