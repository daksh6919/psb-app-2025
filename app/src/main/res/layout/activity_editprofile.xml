<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2">

    <!-- Scrollable Content -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal">

            <!-- Back and Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:text="Profile"
                    android:textColor="#090909"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>



            <!-- Profile Image -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_bg"
                android:src="@drawable/profilephoto"
                android:padding="4dp" />

            <!-- Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/img17"
                        android:tint="#7F3AA1"/>

                    <EditText
                        android:id="@+id/usernameEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Full Name"
                        android:textColor="@color/white"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:textColorHint="#999"
                        android:paddingHorizontal="12dp"/>

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/img14"
                        android:tint="#999999"/>
                </LinearLayout>

                <!-- Phone number input field with +91 fixed prefix -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/img13"
                        android:tint="#7F3AA1"/>

                    <!-- Fixed country code -->
                    <TextView
                        android:id="@+id/countryCodeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91"
                        android:textSize="22sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"/>

                    <!-- EditText for the 10 digits -->
                    <EditText
                        android:id="@+id/phoneEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="8878X-XXXXX"
                        android:textColor="@color/white"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:ems="10"
                        android:background="@android:color/transparent"
                        android:textColorHint="#999"
                        android:paddingHorizontal="12dp"/>

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/img14"
                        android:tint="#999"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/calendar"
                        android:tint="#7F3AA1"/>

                    <EditText
                        android:id="@+id/birthDateEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@android:color/transparent"
                        android:hint="Select Birthdate"
                        android:inputType="none"
                        android:textColorHint="#999"
                        android:paddingHorizontal="12dp"/>

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/img14"
                        android:tint="#999"/>
                </LinearLayout>

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="250dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:text="SAVE"
                    android:textSize="24dp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#1E1E1E"/>

            </LinearLayout>
        </LinearLayout>


    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_background4"
        android:elevation="0dp"
        app:itemBackground="@drawable/bottom_nav_item_background"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:itemActiveIndicatorStyle="@style/NoActiveIndicator"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>