<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    tools:context=".dashboard_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/icon1"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/circle_bg"
                    android:contentDescription="@string/cd_call"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/profile1"
                    app:tint="#7F3AA1" />

                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="220dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/language"
                        app:tint="#ffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/language"
                        android:textColor="#ffff"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/dropdown_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/cd_dropdown_icon"
                        android:padding="4dp"
                        android:src="@drawable/dropdown"
                        app:tint="#ffff" />

                </LinearLayout>
            </RelativeLayout>


            <com.denzcoskun.imageslider.ImageSlider
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="15dp"
                android:id="@+id/imageSlider"
                app:iss_period="1500"
                app:iss_auto_cycle="true"
                app:iss_delay="1000"
                app:iss_corner_radius="20"
                app:iss_title_background="@drawable/rounded_background"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/left_column_container"
                    android:layout_width="0dp"
                    android:layout_height="460dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/customButton1"
                        android:layout_width="match_parent"
                        android:layout_height="98dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_background"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/titleText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/spam"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titleText1"
                            android:text="@string/check_spams_subtitle"
                            android:textColor="#F4E8E8"
                            android:textSize="8sp" />

                        <ImageView
                            android:id="@+id/cardImage1"
                            android:layout_width="99dp"
                            android:layout_height="77dp"
                            android:layout_marginStart="43dp"
                            android:layout_toEndOf="@+id/subText1"
                            android:padding="20dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/spam"
                            app:tint="@color/white" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <RelativeLayout
                        android:id="@+id/customButton2"
                        android:layout_width="match_parent"
                        android:layout_height="98dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_background"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/titleText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calculator"
                            android:layout_marginLeft="65dp"
                            android:textColor="#FFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="95dp"
                            android:layout_below="@+id/titleText2"
                            android:text="@string/calculator_subtitle"
                            android:textColor="#F4E8E8"
                            android:textSize="8sp" />

                        <ImageView
                            android:id="@+id/cardImage2"
                            android:layout_width="74dp"
                            android:layout_height="76dp"
                            android:padding="25dp"
                            android:scaleType="centerInside"
                            app:tint="@color/white"
                            android:src="@drawable/calculator" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <RelativeLayout
                        android:id="@+id/customButton3"
                        android:layout_width="match_parent"
                        android:layout_height="98dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_background4"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/titleText_spam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quiz"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subText_spam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titleText_spam"
                            android:text="@string/educational_subtitle"
                            android:textColor="#F4E8E8"
                            android:textSize="8sp" />

                        <ImageView
                            android:id="@+id/cardImage3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/subText_spam"
                            android:scaleType="centerInside"
                            app:tint="@color/white"
                            android:padding="20dp"
                            android:src="@drawable/quiz" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/customButton4"
                        android:layout_width="match_parent"
                        android:layout_height="98dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_background"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/titleText4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/simulation"
                            android:layout_marginLeft="65dp"
                            android:textColor="#FFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subText4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titleText4"
                            android:layout_marginLeft="93dp"
                            android:text="@string/practice_scenarios_subtitle"
                            android:textColor="#F4E8E8"
                            android:textSize="8sp" />

                        <ImageView
                            android:id="@+id/cardImage4"
                            android:layout_width="56dp"
                            android:layout_height="67dp"
                            android:scaleType="centerInside"
                            android:padding="5dp"
                            android:src="@drawable/simulation2"
                            app:tint="@color/white" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right_column_container"
                    android:layout_width="0dp"
                    android:background="@drawable/rounded_background7"
                    android:layout_height="445dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="@string/financial_strategy_center"
                        android:textSize="10dp" />

                    <RelativeLayout
                        android:id="@+id/customButton50"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_background"
                        android:elevation="2dp"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/titleText5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cyber_help"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subText5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titleText5"
                            android:text="@string/online_support_subtitle"
                            android:textColor="#F4E8E8"
                            android:textSize="8sp" />

                        <ImageView
                            android:id="@+id/cardImage5"
                            android:layout_width="81dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="43dp"
                            android:layout_toEndOf="@+id/subText5"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/cyber"
                            app:tint="@color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/customButton6"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_background4"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/titleText6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/loan"
                            android:layout_marginLeft="95dp"
                            android:textColor="#FFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subText6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titleText6"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="0dp"
                            android:text="@string/loan_planner_subtitle"
                            android:textColor="#F4E8E8"
                            android:textSize="8sp" />

                        <ImageView
                            android:id="@+id/cardImage6"
                            android:layout_width="67dp"
                            android:layout_height="54dp"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/loan3"
                            app:tint="@color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/customButton7"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_background"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/titleText7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/budget"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subText7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titleText7"
                            android:text="@string/plan_your_savings_subtitle"
                            android:textColor="#F4E8E8"
                            android:textSize="8sp" />

                        <ImageView
                            android:id="@+id/cardImage7"
                            android:layout_width="94dp"
                            android:layout_height="52dp"
                            android:layout_marginStart="31dp"
                            android:layout_toEndOf="@+id/subText7"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/budjet"
                            app:tint="@color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/customButton8"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded_background"
                        android:clickable="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/titleText8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/investment"
                            android:layout_marginLeft="52dp"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subText8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="85dp"
                            android:layout_below="@+id/titleText8"
                            android:text="@string/strategic_growth_subtitle"
                            android:textColor="#F4E8E8"
                            android:textSize="8sp" />

                        <ImageView
                            android:id="@+id/cardImage_spam"
                            android:layout_width="51dp"
                            android:layout_height="43dp"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/investment"
                            app:tint="@color/white" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:layout_marginBottom="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_tagline" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:itemActiveIndicatorStyle="@style/NoActiveIndicator"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_background4"
        android:elevation="0dp"
        app:itemBackground="@drawable/bottom_nav_item_background"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>