<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    tools:context=".dashboard_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="25dp"
                android:id="@+id/imageSlider"
                app:iss_period="1000"
                app:iss_auto_cycle="true"
                app:iss_delay="1000"
                app:iss_corner_radius="20"
                app:iss_title_background="@drawable/rounded_background"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp">



                <RelativeLayout
                    android:id="@+id/customButton1"
                    android:layout_width="172dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_background"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spam"
                        android:textColor="#FFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleText"
                        android:text="@string/check_spams"
                        android:textColor="#F4E8E8"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/cardImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/subText"
                        android:scaleType="centerInside"
                        android:src="@drawable/spam"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/customButton2"
                    android:layout_width="172dp"
                    android:layout_height="78dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_background"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/titleText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Cyber Help"
                        android:textColor="#FFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleText2"
                        android:text=" Online Support"
                        android:textColor="#F4E8E8"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/cardImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/subText2"
                        android:scaleType="centerInside"
                        android:src="@drawable/cyber"/>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp">

                <RelativeLayout
                    android:id="@+id/customButton3"
                    android:layout_width="172dp"
                    android:layout_height="78dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_background"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/titleText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quiz"
                        android:textColor="#FFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleText3"
                        android:text="Education"
                        android:textColor="#F4E8E8"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/cardImage3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/subText3"
                        android:scaleType="centerInside"
                        android:src="@drawable/simulation"
                         />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/customButton4"
                    android:layout_width="172dp"
                    android:layout_height="78dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_background"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/titleText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simulation"
                        android:textColor="#FFFF"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleText4"
                        android:text="Practice Scenarios"
                        android:textColor="#F4E8E8"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/cardImage4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/subText4"
                        android:scaleType="centerInside"
                        android:src="@drawable/simulation"
                       />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#AD" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp">

                <RelativeLayout
                    android:id="@+id/customButton5"
                    android:layout_width="172dp"
                    android:layout_height="78dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_background"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/titleText5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan"
                        android:textColor="#FFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subText5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleText5"
                        android:text=" Loan Planner"
                        android:textColor="#F4E8E8"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/cardImage5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/subText5"
                        android:scaleType="centerInside"
                        android:src="@drawable/loan"
                       />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/customButton6"
                    android:layout_width="172dp"
                    android:layout_height="78dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_background"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/titleText6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget and Saving"
                        android:textColor="#FFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subText6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleText6"
                        android:text="Plan your savings"
                        android:textColor="#F4E8E8"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/cardImage6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/subText6"
                        android:scaleType="centerInside"
                        android:src="@drawable/savings"
                       />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp">

                <RelativeLayout
                    android:id="@+id/customButton7"
                    android:layout_width="172dp"
                    android:layout_height="78dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_background"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/titleText7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculator"
                        android:textColor="#FFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subText7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleText7"
                        android:text="Calculate finances"
                        android:textColor="#F4E8E8"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/cardImage7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/subText7"
                        android:scaleType="centerInside"
                        android:src="@drawable/calculator"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/customButton8"
                    android:layout_width="172dp"
                    android:layout_height="78dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_background"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/titleText8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advisor"
                        android:textColor="#FFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subText8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleText8"
                        android:text="Get financial advice"
                        android:textColor="#F4E8E8"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/cardImage8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/subText8"
                        android:scaleType="centerInside"
                        android:src="@drawable/advisor"
                         />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </LinearLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_background4"
        android:elevation="20dp"
        app:itemBackground="@drawable/bottom_nav_item_background"
        app:itemIconTint="#FFFF"
        app:itemTextColor="#FFFF"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>