<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    tools:context=".MainActivity">

    <!-- Top Banner Image -->
    <ImageView
        android:id="@+id/top_banner_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_background"
        android:contentDescription="Security and Finance Banner" />

    <!-- Main Content Area with two columns -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Left Column - White Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <!-- Spam Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/left_button1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPAM"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/left_button1_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/left_button1_title"
                    android:text="CHECK SPAMS"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/left_button1_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mail_outline"
                    app:tint="@color/black"
                    android:contentDescription="Spam Icon"/>

            </RelativeLayout>

            <!-- Calculator Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/left_button2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CALCULATOR"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/left_button2_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/left_button2_title"
                    android:text="CALCULATE FINANCES"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/left_button2_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_calculator"
                    app:tint="@color/black"
                    android:contentDescription="Calculator Icon"/>

            </RelativeLayout>

            <!-- Quiz Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/left_button3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUIZ"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/left_button3_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/left_button3_title"
                    android:text="EDUCATIONAL"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/left_button3_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_quiz"
                    app:tint="@color/black"
                    android:contentDescription="Quiz Icon"/>

            </RelativeLayout>

            <!-- Simulation Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/left_button4_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIMULATION"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/left_button4_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/left_button4_title"
                    android:text="PRACTICE SCENARIOS"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/left_button4_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_simulation"
                    app:tint="@color/black"
                    android:contentDescription="Simulation Icon"/>

            </RelativeLayout>

        </LinearLayout>

        <!-- Right Column - Blue Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Center of Financial Strategy"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:padding="4dp"/>

            <!-- Cyber Help Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/right_button1_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_shield"
                    app:tint="@color/white"
                    android:contentDescription="Cyber Help Icon"/>

                <TextView
                    android:id="@+id/right_button1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/right_button1_icon"
                    android:layout_marginStart="8dp"
                    android:text="CYBER HELP"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/right_button1_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/right_button1_title"
                    android:layout_toEndOf="@id/right_button1_icon"
                    android:layout_marginStart="8dp"
                    android:text="ONLINE SUPPORT"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <!-- Loan Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/right_button2_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_loan"
                    app:tint="@color/white"
                    android:contentDescription="Loan Icon"/>

                <TextView
                    android:id="@+id/right_button2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/right_button2_icon"
                    android:layout_marginStart="8dp"
                    android:text="LOAN"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/right_button2_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/right_button2_title"
                    android:layout_toEndOf="@id/right_button2_icon"
                    android:layout_marginStart="8dp"
                    android:text="LOAN PLANNER"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <!-- Budget Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/right_button3_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_budget"
                    app:tint="@color/white"
                    android:contentDescription="Budget Icon"/>

                <TextView
                    android:id="@+id/right_button3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/right_button3_icon"
                    android:layout_marginStart="8dp"
                    android:text="BUDGET"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/right_button3_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/right_button3_title"
                    android:layout_toEndOf="@id/right_button3_icon"
                    android:layout_marginStart="8dp"
                    android:text="PLAN YOUR SAVINGS"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <!-- Advisor Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/right_button4_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_advisor"
                    app:tint="@color/white"
                    android:contentDescription="Advisor Icon"/>

                <TextView
                    android:id="@+id/right_button4_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/right_button4_icon"
                    android:layout_marginStart="8dp"
                    android:text="ADVISOR"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/right_button4_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/right_button4_title"
                    android:layout_toEndOf="@id/right_button4_icon"
                    android:layout_marginStart="8dp"
                    android:text="STRATEGIC GROWTH"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Home Button -->
            <ImageView
                android:id="@+id/navbar_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_home"
                android:padding="12dp"
                android:contentDescription="Home" />

            <!-- Notification Button -->
            <ImageView
                android:id="@+id/navbar_notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_notification"
                android:padding="12dp"
                android:contentDescription="Notifications" />

            <!-- Settings Button -->
            <ImageView
                android:id="@+id/navbar_settings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_settings"
                android:padding="12dp"
                android:contentDescription="Settings" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
