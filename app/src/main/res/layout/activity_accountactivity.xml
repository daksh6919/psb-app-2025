<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:text="Create Your"
            android:textSize="49sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/spirax"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Account"
            android:textSize="55sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/spirax"/>
    </LinearLayout>

    <!-- White curved card -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        android:orientation="vertical"
        android:background="@drawable/white_curved_top"
        android:padding="24dp">

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/img17"
                android:tint="#17BAD3"/>

            <EditText
                android:id="@+id/usernameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Full Name"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:textColorHint="#999"
                android:paddingHorizontal="12dp"/>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/img14"
                android:tint="#999999"/>
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/email"
                android:tint="#17BAD3"/>

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="domain@gmail.com"
                android:inputType="textEmailAddress"
                android:textColorHint="#999"
                android:paddingHorizontal="12dp"/>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/img14"
                android:tint="#999"/>
        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/img15"
                android:tint="#17BAD3"/>

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Password"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:textColorHint="#999"
                android:paddingHorizontal="12dp"/>

            <ImageView
                android:id="@+id/passwordToggle"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/img16"
                android:tint="#999999"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Confirm password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/img15"
                android:tint="#17BAD3"/>

            <EditText
                android:id="@+id/confirmPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColorHint="#999"
                android:paddingHorizontal="12dp"/>

            <ImageView
                android:id="@+id/confirmPasswordToggle"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/img16"
                android:tint="#999999"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <Button
            android:id="@+id/signinButton"
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:text="SIGN UP"
            android:textColor="@android:color/white"
            android:backgroundTint="#17BAD3"
            android:textSize="24sp"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have account?"/>

            <TextView
                android:id="@+id/signInTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="2dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

