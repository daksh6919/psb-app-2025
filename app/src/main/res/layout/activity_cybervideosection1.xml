<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:gravity="center"
android:background="@android:color/transparent">

<!-- Outer container for popup -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:gravity="center_horizontal"
        android:padding="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VEDIO LESSONS"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#912AA4">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_background5"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- FAQ Items -->



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_background"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:text="1. What is Phishing?"
                    android:textSize="20dp">

                </TextView>

                <ImageView
                    android:id="@+id/plus_icon4"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Plus icon"
                    android:src="@drawable/playvideo"
                    android:tint="#ffff" />
            </RelativeLayout>

            <TextView
                android:id="@+id/faq4_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A malware attack involves using malicious software (malware) to harm a computer or network. This software can steal private data, disrupt system functions, or take control of the infected device without the user's knowledge. It's a common type of cybercrime that aims to cause damage or gain unauthorized access."
                android:visibility="gone"
                android:padding="8dp" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_background"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:text="2. How to Identify Phish?"
                    android:textSize="20dp">

                </TextView>

                <ImageView
                    android:id="@+id/plus_icon5"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Plus icon"
                    android:src="@drawable/playvideo"
                    android:tint="#ffff" />
            </RelativeLayout>

            <TextView
                android:id="@+id/faq5_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A Denial-of-Service (DoS) attack is a cybercrime that floods a network or website with so much traffic that it overwhelms the system, making it inaccessible to legitimate users. The attack doesn't steal data but instead focuses on preventing a service from working correctly. Think of it like a mob of people blocking the entrance to a store, preventing real customers from getting in."
                android:visibility="gone"
                android:padding="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_background"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:text="3. video:"
                    android:textSize="16dp">

                </TextView>

                <ImageView
                    android:id="@+id/plus_icon6"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Plus icon"
                    android:src="@drawable/playvideo"
                    android:tint="#ffff" />
            </RelativeLayout>

            <TextView
                android:id="@+id/faq6_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This crime involves stealing a person's private information to impersonate them. The criminal then uses this information to commit fraud, make purchases, or open new accounts in the victim's name."
                android:visibility="gone"
                android:padding="8dp" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>