<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradient_background2"
tools:context=".Calculator">

<!-- Scrollable Content -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/bottom_navigation"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:text="Calculator"
                android:textColor="#090909"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#040404" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                android:id="@+id/imageSlider"
                app:iss_period="1000"
                app:iss_auto_cycle="true"
                app:iss_delay="1000"
                app:iss_corner_radius="20"
                app:iss_title_background="@drawable/gradient"/>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All-in-One Calculation Hub"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="15dp">

        </TextView>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">





            <RelativeLayout
                android:id="@+id/customButton1"
                android:layout_width="172dp"
                android:layout_height="78dp"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background_calculator"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax on Income"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regime"
                    android:layout_below="@+id/titleText"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <ImageView
                    android:id="@+id/cardImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/subText"
                    android:scaleType="centerInside"
                    android:src="@drawable/tax" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/customButton2"
                android:layout_width="172dp"
                android:layout_height="78dp"
                android:orientation="vertical"
                android:gravity="center"
                android:elevation="5dp"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background_calculator"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/titleText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMI"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="emi"
                    android:layout_below="@+id/titleText2"
                    android:textSize="14sp"
                    android:textColor="#666666"/>


                <ImageView
                    android:id="@+id/cardImage2"
                    android:layout_width="111dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/subText2"
                    android:scaleType="centerInside"
                    android:src="@drawable/emi" />


            </RelativeLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <RelativeLayout
                android:id="@+id/customButton3"
                android:layout_width="172dp"
                android:layout_height="78dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background_calculator"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/titleText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GST"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleText3"
                    android:text="GST Estimate"
                    android:textColor="#666666"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/cardImage3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/subText3"
                    android:scaleType="centerInside"
                    android:src="@drawable/gst1" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/customButton4"
                android:layout_width="172dp"
                android:layout_height="78dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_background_calculator"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/titleText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleText4"
                    android:text="Saving Planner"
                    android:textColor="#666666"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/cardImage4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/subText4"
                    android:scaleType="centerInside"
                    android:src="@drawable/savings2" />


            </RelativeLayout>




        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />


    </LinearLayout>
</ScrollView>


<!-- Fixed BottomNavigationView -->
<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/gradient_background4"
    android:elevation="20dp"
    app:itemIconTint="@color/black"
    app:itemTextColor="@color/black"
    app:itemBackground="@drawable/bottom_nav_item_background"
    app:labelVisibilityMode="labeled"
    app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
