<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    tools:context=".AboutUs">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="28dp"
                    android:tint="@color/white"
                    android:layout_height="28dp"
                    android:src="@drawable/back" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="115dp"
                    android:text="About Us"
                    android:textColor="#FFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="518dp"
                android:layout_marginTop="24dp"
                android:elevation="5dp"
                android:background="@drawable/rounded_background"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our mission is to empower every Indian to navigate the digital financial world with confidence and security.\n\nIn an era where online transactions and services are becoming a part of daily life, we believe that knowledge is the best protection. We saw a need for a single platform where individuals can not only learn about financial products but also shield themselves from the growing risks of spam and cyber fraud. We are here to bridge that gap.\n\nTrishulX is your dedicated partner for financial literacy and digital safety. We are committed to simplifying complex topics—from understanding loans to planning your savings—while providing robust tools to help you identify and report online threats.\n\nTrishulX is a brand owned by Team Ur4nium. Our platform is designed for educational and informational purposes to help you make smarter, safer decisions in the digital world.\n\n\n\nFor any questions or feedback, please contact us at ."
                    android:textColor="#FFFF"
                    android:textSize="14dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/AboutUsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-340dp"
                    android:layout_marginTop="400dp"
                    android:text="">

                </TextView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <!-- Fixed BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:itemActiveIndicatorStyle="@style/NoActiveIndicator"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_background4"
        android:elevation="0dp"
        app:itemBackground="@drawable/bottom_nav_item_background"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>
